.table {
  display: flex;
  border: 1px solid gray;
}

.table_head {
  display: flex;
  width: 100%;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}

.th {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}
